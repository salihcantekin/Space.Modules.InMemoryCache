<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<LangVersion>latest</LangVersion>
		<RepositoryType>git</RepositoryType>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Release'">
		<Authors>salihcantekin</Authors>
		<Company>Space</Company>
		<Description>General In-Memory classes and helpers for the Space framework.</Description>
		<PackageId>Space.Modules.InMemoryCache</PackageId>
		<RepositoryUrl>https://github.com/salihcantekin/Space</RepositoryUrl>
		<PackageTags>inmemory;space;dotnet</PackageTags>
		<PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
		<PackageProjectUrl>https://github.com/salihcantekin/Space</PackageProjectUrl>
		<PackageIcon>icon.png</PackageIcon>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<!-- Explicit pack via CI, so disable automatic pack on build -->
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)'=='Debug'">
		<Version>0.0.0-local</Version>
		<InformationalVersion>0.0.0-local+$(SourceRevisionId)</InformationalVersion>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
	</PropertyGroup>

	<ItemGroup>
		<None Include="icon.png" Pack="true" PackagePath="" />
		<!-- Link the root README.md so NuGet pack includes it without duplicating file -->
		<None Include="../README.md" Pack="true" PackagePath="" Link="README.md" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Space.Abstraction" Version="1.1.7-preview.2" />
		<PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All" />
	</ItemGroup>

</Project>